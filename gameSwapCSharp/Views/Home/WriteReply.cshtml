@model Response

<div class="text-center">
    <h3 class="text-start">Replying to: @ViewBag.ParentMessage.Sender.Username</h3>
    <form action="/message/@ViewBag.ParentMessage.MessageId/reply/send" method="post">
        <div class="form-group">
            <label for="ResponseContent" class="form-label">Response</label>
            <textarea asp-for="ResponseContent" rows="3" class="form-control"></textarea>
            <span asp-validation-for="ResponseContent" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="ProposedPrice" class="form-label">Price</label>
            <input asp-for="ProposedPrice" class="form-control">
            <span asp-validation-for="ProposedPrice" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <input type="submit" value="Reply!" class="btn btn-info">
        </div>
    </form>
</div>